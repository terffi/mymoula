{
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",

    "paths": {
      "@api/*": ["./src/*"]
    },
    "rootDir": "./src",

    "target": "ES2021",
    "module": "ESNext"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
