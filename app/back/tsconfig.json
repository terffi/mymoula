{
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/*"]
    },
    "rootDir": "./src"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
