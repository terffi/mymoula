{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "app/front/dist"
            }
        },
        {
            "src": "app/back/dist/server.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "app/back/dist/**"
                ],
                "distDir": "app/back/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "app/back/dist/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}