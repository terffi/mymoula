{
    "version": 2,
    "buildCommand": "yarn build",
    "builds": [
        {
            "src": "dist/back/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/front/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/dist/back/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/front/index.html"
        }
    ]
}